<%- include("partials/header.ejs") %>

   <section class="container-xl py-5">
        <div class="row justify-content-evenly ">
            <div class="col-md-5 p-5">
                <h2>Welcome to the World's best crypto exchange platform.</h2>
                <p>Join others in a safe, simple and secure crypto experience.</p>
                <form action="/sign-up" method="GET">
                    <button class="btn btn-outline-success" type="submit">Sign up</button>
                </form> 
            </div>
            <div class="col-md-5 pl-5 d-flex">
                <img src="/img/coins-sm.jpg" class="img-fluid mx-auto rounded-5" alt="pile of gold and silver crypto tokens">
            </div>
        </div>
    </section>

    <section class="container-fluid mb-5 py-3 secondary" >
        <div class="row justify-content-evenly ">
            <div class="col-md-3 col-lg-2 d-flex align-items-center justify-content-center">
                <p class="text-center fs-4 ">Your safe and secure platform for digital currency.</p>
            </div>
            <div class="col-md-3 col-lg-2  d-flex align-items-center justify-content-center" >
                <p class="text-center fs-4 align-middle">Fully insured and compliant.</p>
            </div>
            <div class="col-md-3 col-lg-2 d-flex align-items-center justify-content-center">
                
                <svg xmlns="http://www.w3.org/2000/svg" width="250" height="250" fill="currentColor" class="img-fluid bi bi-shield-shaded " viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 14.933a.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z"/>
                </svg>
            </div>
        </div>
    </section>

    <section class="container-xl mb-5 pb-3 primary" >
        <% if(locals.coinData) { %>
            <% const tickers = locals.coinData.getTickers() %>
            <div class="row justify-content-center">
                <% for (let i = 1; i < tickers.length; i++) { %>
                
                
                    <% const coin = locals.coinData.getCoin(tickers[i]) %>
                    <div class="card m-2 col-lg-2 col-md-3 col-sm-5 rounded-5 border border-black d-flex align-items-center" >
                        <img src=<%= coin.svg %> class="img-fluid pt-4" width="50px" alt="...">
                    
                        <p class="card-text  text-center"><%= coin.name %></p>
                        <p class="card-text  text-center">$<%= coin.price %> USD</p>
                    
                        <div class="card-body pt-0 d-flex align-items-center">
                            <% if(locals.user){ %>
                                <a href="/buy?coin=<%= tickers[i]%>" class="btn btn-outline-success">Buy</a>
                            <% } else { %>
                                <a href="/login" class="btn btn-outline-success">Buy</a>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
    </section>
    <section class="container pb-5">

    </section>



<%- include("partials/footer.ejs") %>